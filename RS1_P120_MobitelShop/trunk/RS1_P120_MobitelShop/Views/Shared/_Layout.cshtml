</head>
<body>
    @{
        RS1_P120_MobitelShop.Models.Korisnik korisnik = RS1_P120_MobitelShop.Helper.Autentifikacija.GetLogiraniKorisnik(Context);
    }
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" id="mainNav">

        <div class="container-fluid ">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Mobitel shop</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Home</a></li>
            </ul>
            <form class="navbar-form navbar-left" action="/Home/Index">
                <div class="input-group">

                    @Html.TextBox("searchTerm", null, new { id = "txtSearch" })
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>
            </form>
            
            <ul class="nav navbar-nav navbar-right">
                @*ovo izmijenio treba da ide /Autentifikacija/Index
        onclick="loginPopUp()*@
                @if (korisnik == null)
    {
            @*<li><a href="/Autentifikacija/Index"><span class="glyphicon glyphicon-shopping-cart"></span></a></li>*@
                <li>
                    <a  href="#" data-toggle="modal" data-target="#popup">Radil</a>
                    <div class="modal fade" id="popup">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div id="zaAjaxRegistraciju"> 
                                   @Html.Action("Index", "Autentifikacija"); 
                          </div> 
                      </div> 
                  </div> 
              </div> 
          </li>

                }

                else if (korisnik != null && korisnik.Ime == null)
                {
            <li><a href="ModulKlijenti/Profile"><span class="glyphicon glyphicon-shopping-cart"></span>@Model.BrojArtikalaUKorpi</a></li>
}
else
{
            <li><a href="ModulKlijenti/Narudzba"><span class="glyphicon glyphicon-shopping-cart"></span>@Model.BrojArtikalaUKorpi</a></li>
}
                @if (korisnik == null)
    {
            <li><a href="/Autentifikacija/Index"><span class="glyphicon glyphicon-log-in"></span> Login/Sign up</a></li>
}
else
{
            <li><a href="ModulKlijenti/Profile"><span class="glyphicon glyphicon-log-in"></span> Moj profil</a></li>
            <li><a href="/Autentifikacija/Logout"><span class="glyphicon glyphicon-log-out"></span> Log out</a></li>
}
            </ul>
        </div>
    </nav>
    @*ovo*@
    @*<div id="LogIdInPopUp" style="display:none" class="modal-dialog">
            @Html.Action("Index", "Autentifikacija")
        </div>*@

    
    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>*@


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


</body>
</html>

<script style="font-family:Arial" type="text/javascript">
                    $(function () {
                        $("#txtSearch").autocomplete({
                            source: '@Url.Action("GetStudents","Home")',
                            select: submitAutocompleteForm,
                            minLength: 2
                        });
        });

        var submitAutocompleteForm = function (event, ui) {
            var $input = $(this);
            $input.val(ui.item.label);
            var $form = $input.parents("form:first");
            $form.submit();
        };
</script>
