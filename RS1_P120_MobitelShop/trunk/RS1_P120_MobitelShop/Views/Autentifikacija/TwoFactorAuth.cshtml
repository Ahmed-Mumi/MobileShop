@model RS1_P120_MobitelShop.ViewModel.KorisnikVM
 
    <div style="font-size:20px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">Skenirajte QR code sa programom Authenticator na Vašem mobilnom uređaju</div>
    <div>
        <img src="@ViewBag.BarcodeImageUrl" />
    </div>
    <div>
        Manual Setup Code: <b>@ViewBag.SetupCode</b>
    </div>
<br />
    <div>
        @using (Html.BeginForm("Verfiy2FA", "Autentifikacija", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.Email)
            @Html.HiddenFor(x => x.Password)
            @Html.HiddenFor(x => x.Zapamti)
            @Html.HiddenFor(x => x.Url)
            <input type="text" name="passcode" class="form-control" style="width:40%;display:inline-block"/>
            <input type="submit" class="btn btn-success" style="margin-left:15px" />
        }
    </div> 