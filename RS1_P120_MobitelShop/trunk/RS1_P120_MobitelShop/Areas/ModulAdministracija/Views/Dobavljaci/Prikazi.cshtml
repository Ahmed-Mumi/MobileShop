@model RS1_P120_MobitelShop.Areas.ModulAdministracija.Models.DobavljaciPrikaziVM
@using RS1_P120_MobitelShop.Areas.ModulAdministracija.Models
@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table class="table">
        <thead>
            <tr>
                <th>Naziv</th>
                <th>Email</th>         
                <th>Telefon</th>
                <th>Adresa</th>
                <th>Skladište dobavljača</th>
                <th>Grad</th>
                <th>Akcija</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DobavljaciPrikaziVM.DobavljaciInfo x in Model.dobavljaciStavke)
            {
                <tr>
                    <td>
                        @x.Naziv
                    </td>
                    <td>@x.Email</td>
                    <td>@x.Telefon</td>
                    <td>@x.Adresa</td>
                    <td>@x.skladista</td>
                    <td>@x.Grad</td>
                    <td>
                        @Html.ActionLink("Obriši", "Obrisi", new { id = x.Id }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("Uredi", "Uredi", new { id = x.Id }, new { @class = "btn btn-info" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
    </div>
</body>
</html>

