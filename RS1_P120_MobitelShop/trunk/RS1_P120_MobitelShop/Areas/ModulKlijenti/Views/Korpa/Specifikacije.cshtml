@using RS1_P120_MobitelShop.Areas.ModulKlijenti.ViewModel;
@model RS1_P120_MobitelShop.Areas.ModulKlijenti.ViewModel.SpecifikacijeList
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Specifikacije</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("IspisiSpecifikacije", "Korpa"))
        {
            for (int i = 0; i < Model.specifikacije.Count; i++)
            {
                @Html.CheckBoxFor(m => Model.specifikacije[i].isChecked)
                @Model.specifikacije[i].RamNaziv <br />
                @Html.HiddenFor(m => Model.specifikacije[i].RamId)
                @Html.HiddenFor(m => Model.specifikacije[i].RamNaziv)
            }
            <input type="submit" value="Prikazi" />
        }
    </div>
    @ViewBag.brojspecifi
</body>
</html>