            <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
        </ul>
    </div>
</nav>
<div class="modal-body row">
    <div class="col-md-6">
        <!-- Your first column here -->
        <img src="@Url.Content(@Model.Slika)" width=" 558" alt="@Model.Slika">
    </div>
    <div class="col-md-6">
        <table class="table" style="margin-top:50px">
            <thead>
                <tr>
                    <th scope="col">Specifikacije</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Operativni sistem</td>
                    <td>@Model.OperativniSistem</td>
                </tr>
                <tr>
                    <td>Eksterna memorija</td>
                    <td>@Model.EksternaMemorija</td>
                </tr>
                <tr>
                    <td>Ekran</td>
                    <td>@Model.Ekran</td>
                </tr>
                <tr>
                    <td>Rezolucija</td>
                    <td>@Model.Rezolucija</td>
                </tr>
                <tr>
                    <td>Vrsta ekrana</td>
                    <td>@Model.VrstaEkrana</td>
                </tr>
                <tr>
                    <td>Jezgra procesora</td>
                    <td>@Model.JezgreProcesora</td>
                </tr>
                <tr>
                    <td>Kamera</td>
                    <td>@Model.Kamera</td>
                </tr>
                <tr>
                    <td>Povezivanje</td>
                    <td>@Model.Povezivanje</td>
                </tr>
                <tr>
                    <td>RAM</td>
                    <td>@Model.RAM</td>
                </tr>
            </tbody>
        </table>
        @using (Html.BeginForm("Staviukorpi", "Korpa", new { ArtikalId = Model.ArtikalId, KlijentId = Model.KlijentId }))
        {
            <button type="submit" class="btn btn-primary btn-lg">Stavi u korpu</button>
        }
        <input type="button" onclick="showPopUp()" value="Uporedi" class="btn btn-primary btn-lg" />
        @*ovo je div u kojeg smijestamo akciju Uporedi po ovom Id-u radimo ajax na klik pretrazi i isto ga koristimo za modal*@
        <div id="uporediPopUp" style="display:none">
            <div id="zaAjax">
                @Html.Action("Index", "Uporedi", new { artikalId = Model.ArtikalId })

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function showPopUp() {
        $("#uporediPopUp").dialog({
            height: 650,
            width: 800,
            modal: true,
            buttons: {
                "Nazad": function () {
                    $(this).dialog("close");
                }
            }
        });
    } 
</script>
